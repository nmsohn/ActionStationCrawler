{
    "compilerOptions": {
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "rootDir": "src",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [
            "dom", "es6"
        ],
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"]
}